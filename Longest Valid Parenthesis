def longestValidParentheses(s: str) -> int:
    stack = []
    max_length = 0
    stack.append(-1)  
    
    for i in range(len(s)):
        if s[i] == '(':
            stack.append(i)
        else:  
            stack.pop()  # Pop the corresponding '(' index
            if not stack:
                stack.append(i)  
            else:
                max_length = max(max_length, i - stack[-1])
    
    return max_length
